{
  "name": "spotavibe-lite",
  "description": "A Userscript that overlays basic DJ information on the Spotify web player.",
  "author": "Nick Derevjanik",
  "license": "GPL-3.0-only",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rimraf dist/",
    "build:lib": "npm run --workspace=src/lib build",
    "clean:userscript": "rimraf dist/userscript",
    "build:userscript": "npm run --workspace=src/apps/userscript build",
    "dist:userscript": "mkdir -p dist/userscript && cp -r src/apps/userscript/dist/* dist/userscript",
    "package:userscript": "npm-run-all clean:userscript build:userscript dist:userscript",
    "serve:userscript": "npm run package:userscript && http-server dist/userscript -o /spotavibe-lite.user.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@jest/globals": "^30.1.2",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/jest": "^30.0.0",
    "eslint": "^9.34.0",
    "http-server": "^14.1.1",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  },
  "workspaces": [
    "src/lib",
    "src/apps/userscript"
  ]
}
